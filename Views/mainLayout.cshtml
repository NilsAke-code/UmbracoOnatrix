@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{



    Layout = null;

    var pageTitle = Model.Name;
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@pageTitle</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="~/css/Style.css" rel="stylesheet"/>
</head>
<body>
    <div class="bg-[var(--clr-main)] text-white py-3">
        <div class="container mx-auto px-4 flex justify-between items-center">
            <p class="text-xs">Klarabergsviadukten 90, 111 64 Stockholm</p>
            <div class="flex gap-4 items-center -my-3">
                <div class="w-px h-9 bg-gray-500"></div>
                <a href="#" class="hover:opacity-80">
                    <img src="~/images/Icon-Facebook.svg" alt="Facebook" class="h-3">
                </a>
                <div class="w-px h-9 bg-gray-500"></div>
                <a href="#" class="hover:opacity-80">
                    <img src="~/images/Icon-twitter.svg" alt="Twitter" class="h-3">
                </a>
                <div class="w-px h-9 bg-gray-500"></div>
                <a href="#" class="hover:opacity-80">
                    <img src="~/images/Icon-Pinterest.svg" alt="Pinterest" class="h-3">
                </a>
                <div class="w-px h-9 bg-gray-500"></div>
            </div>
        </div>
    </div>

    <header class="bg-white shadow-md py-4">
        <div class="container mx-auto px-4 flex justify-between items-center">

            <div class="flex items-center">
                <img src="~/images/Logotyp.svg" alt="Onatrix" class="h-10">
            </div>


            <nav class="flex" style="gap: 80px">
                <a href="/about" class="text-[var(--clr-main)] font-bold">About</a>
                <a href="/services" class="text-[var(--clr-main)] font-bold">Services</a>
                <a href="#" class="text-[var(--clr-main)] font-bold">Projects</a>
                <a href="/contact" class="text-[var(--clr-main)] font-bold">Contact</a>
            </nav>

            <div class="flex items-center">
                <img src="~/images/Search.svg" alt="Search" class="h-4">
            </div>
         
        </div>
    </header>

    @RenderBody()


    <footer class="bg-[var(--clr-black)] text-[var(--clr-main)] py-4">
        <div class="container mx-auto px-4 text-xs">
            <p>© Onatrix. All Rights Reserved. Credits to <a href="#" class="text-[var(--clr-sub3)] hover:underline">Themesflat</a></p>
        </div>
    </footer>

</body>
</html>