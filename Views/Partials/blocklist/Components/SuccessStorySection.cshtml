@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    var content = (ContentModels.SuccessStorySection)Model.Content;
    var mapBackground = content.MapBackgroundImage;
    var teamImage = content.TeamImage;
    var mapUrl = mapBackground?.Url() ?? "";
    var teamUrl = teamImage?.Url() ?? "";
}


@* En del av koden är genererad med CHAT GPT 5.1.
    team bilden ska överlappa in i nästa section, använder -mb-48 för att få bilden att sticka ner, overflow-visible så den tillåts sticka ut ur frame.
    karta bilden har absolute positionering och opacity 40% för att inte synas helt.
*@

<section class="bg-[var(--clr-main)] py-16 relative overflow-visible">
    <div class="max-w-7xl mx-auto px-4 relative">
        <div class="absolute top-0 left-0 right-0 h-[500px] z-0">
            <img src="@mapUrl" alt="" class="w-full h-full object-cover opacity-40">
        </div>

        <div class="relative z-10 text-center">
            <p class="text-sm text-[var(--clr-sub3)] font-bold uppercase mb-4 mt-8">@content.SectionLabel</p>

            <h2 class="text-[40px] font-bold text-white mb-12">@content.SectionTitle</h2>

            <div class="grid grid-cols-3 gap-12 mb-16">
                <div>
                    <p class="text-[80px] font-semibold text-[var(--clr-sub3)] leading-none mb-4">@content.SectionNumber1</p>

                    <!-- Detta är genererat med CHAT GPT 5.1, la in en <br> i Umbraco för radbrytning-->
                    <p class="text-[18px] text-white">@Html.Raw(content.SectionText1)</p>
                </div>

                <div>
                    <p class="text-[80px] font-semibold text-[var(--clr-sub3)] leading-none mb-4">@content.SectionNumber2</p>
                    <p class="text-[18px] text-white">@content.SectionText2</p>
                </div>

                <div>
                    <p class="text-[80px] font-semibold text-[var(--clr-sub3)] leading-none mb-4">@content.SectionNumber3</p>
                    <p class="text-[18px] text-white">@content.SectionText3</p>
                </div>
            </div>
        </div>

        <div class="relative z-10 -mb-48 max-w-5xl mx-auto">
            <img src="@teamUrl" alt="Team" class="w-full h-auto object-contain">
        </div>
    </div>
</section>
